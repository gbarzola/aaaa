<div class="container">
<header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
          <div class="col-md-4">
              <%= link_to procesos_path do %>
                <%= image_tag("logo.png", class: "mb-4",height: '50', width: '50') %>
              <% end %>  
          </div>
