<div class="card" style="margin: 0 auto;float: none;margin-bottom: 10px;width: 30rem;border-style:none; background-color:rgba(245, 245, 245, 0);">
  <h2 class="text-center">¿Olvidaste tu contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <br>
  <div class="field">
    <%= f.label :email , "CORREO ELECTRONICO"%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>
  <br>
  <div class="actions text-center">
    <%= f.submit "Enviame contraseña temporal", class: "btn btn-primary" %>
  </div>
<% end %>

  <div class="actions text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>