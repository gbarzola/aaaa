<div class="card" style="margin: 0 auto;margin-bottom: 10px;width: 30rem;border-style:none; background-color:rgba(245, 245, 245, 0);">
<h2 class="text-center">Ingresa Aqui</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <br>
  <div class="field">
    <%= f.label :email, "CORREO ELECTRONICO" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control"%>
  </div>
  <br>
  <div class="field">
    <%= f.label :password, "CONTRASEÃ‘A" %>
    <%= f.password_field :password, autocomplete: "off" , class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-inline text-center">
      <%= f.check_box :remember_me%>
      <%= f.label :remember_me, "Recuerdame" %>
    </div>
  <% end -%>
  <br>
  <div class="actions text-center">
    <%= f.submit "Ingresar" , class: "btn btn-primary"%>
  </div>
<% end %>

  <div class="actions text-center">
    <%= render "devise/shared/links"%>
  </div>
</div>

</body>