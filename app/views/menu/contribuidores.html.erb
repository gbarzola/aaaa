<%= render 'procesos/nav' %>
<main role="main" class="container">
	<div class="my-3 p-3 bg-white rounded box-shadow">
    <br>
    <h2><i class="fas fa-child"></i> Colaboradores [<%=User.count%>]</h2>
    <br>
    <table class="table">
      <thead>
        <tr>
          <th>Foto</th>
          <th>Email</th>
          <th>Role</th>
          <th>Cantidad procesos</th>
          <th>Cantidad posts</th>
        </tr>
      </thead>
    
      <tbody>
        <% @users = User.all %>
        <% @users.each do |user| %>
            <td><%= image_tag(user.avatar.url(:thumb), class: "rounded-circle",height: '40', width: '40') %></td> 
            <td><%= user.email %></td>
            <td><span class="badge badge-pill <% if user.role == 'admin' %> badge-danger <% else %>badge-dark<% end %>"><%= user.role %></span></td>
            <td><%= user.procesos.count %></td>
            <td><%= user.posts.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</main>